{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Prueba para Documentación",
    "description": "Esta es una API de demostración para probar GitHub Pages.",
    "version": "1.0.0"
  },
  "paths": {
    "/ping": {
      "get": {
        "summary": "Revisa si el servidor está activo",
        "responses": {
          "200": {
            "description": "Servidor activo",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "pong"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
